<div id="page-content">
    <h1 class="text-center mt-4">Articles listing page</h1>
    <div class="container">
        <% @articles.each do |article| %>
            <div class="row justify-content-md-center">
                <div class="col-8 mt-4">
                    <div class="card text-center shadow mb-5 bg-white rounded">
                        <div class="card-header font-italic">
                            By Nguyen Phuong
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
                            <div class="card-text text-left mb-3"><%= truncate(article.description, length: 100) %></div>
                            <%= link_to 'Show', article_path(article.id), method: :GET, class: "btn btn-outline-success" %>
                            <%= link_to 'Edit', edit_article_path(article.id), method: :GET, class: "btn btn-outline-warning" %>
                            <%= link_to 'Delete', article_path(article.id), method: :DELETE, data: { confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
                        </div>
                        <div class="card-footer text-muted">
                            <small>Created <%= time_ago_in_words(article.created_at) %></small>,
                            <small>Created <%= time_ago_in_words(article.updated_at) %></small>
                        </div>
                        </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

<%= link_to 'Home Page', root_path %><br/>
<%= link_to 'Create new', new_article_path, method: :GET %>